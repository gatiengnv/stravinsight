{% extends 'base.html.twig' %}

{% block title %}{{ title }} - StravInsight{% endblock %}

{% block body %}
    <div class="flex min-h-screen flex-col bg-gradient-to-b from-base-100 to-base-200/30">
        <!-- Header -->
        <header class="navbar bg-base-100/90 backdrop-blur-md sticky top-0 z-50 transition-all duration-300">
            <div class="container mx-auto flex items-center justify-between">
                <div class="flex items-center">
                    <a href="/" class="flex items-center gap-2 hover:scale-105 transition-transform">
                        <img src="{{ asset('/img/icon.png') }}" alt="Strava" class="h-10 w-10 drop-shadow-md"/>
                        <span
                            class="text-xl font-bold bg-gradient-to-r from-orange-500 to-red-600 bg-clip-text text-transparent">StravInsight</span>
                    </a>
                </div>

                <div>
                    <a class="btn btn-primary hover:scale-105 transition-all shadow-lg hover:shadow-primary/30"
                       href="/connect/strava">
                        Login with Strava
                    </a>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1">
            <section class="py-20 relative overflow-hidden">
                <div
                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>

                <div class="container relative">
                    <div class="mx-auto mb-8 max-w-2xl text-center">
                        <span
                            class="inline-block px-4 py-1 rounded-full bg-orange-100 text-orange-800 font-medium text-sm mb-4">LEGAL</span>
                        <h1 class="text-3xl font-bold tracking-tight sm:text-4xl">{{ title }}</h1>
                    </div>

                    <div class="card border-none shadow-lg bg-base-100 max-w-4xl mx-auto">
                        <div class="card-body">
                            <div class="legal-content prose prose-lg max-w-none">
                                {{ text|raw }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <!-- Footer -->
        <footer class="footer p-10 bg-base-200 text-base-content flex flex-wrap justify-around">
            <div>
                <a href="/" class="flex items-center gap-3 mb-4">
                    <img src="{{ asset('/img/icon.png') }}" alt="Strava" class="h-8 w-8 drop-shadow-md"/>
                    <span
                        class="text-xl font-bold bg-gradient-to-r from-orange-500 to-red-600 bg-clip-text text-transparent">StravInsight</span>
                </a>
                <p class="max-w-xs text-sm opacity-70">Transform your training data into actionable insights to improve
                    your performance</p>
            </div>
            <div>
                <span class="footer-title opacity-70">Product</span>
                <a class="link link-hover hover:text-primary transition-colors" href="/#features">Features</a>
                <a class="link link-hover hover:text-primary transition-colors" href="/#faq">FAQ</a>
                <a class="link link-hover hover:text-primary transition-colors" href="/#testimonials">Testimonials</a>
            </div>
            <div>
                <span class="footer-title opacity-70">Legal</span>
                <a class="link link-hover hover:text-primary transition-colors" href="/terms-of-use">Terms of Use</a>
                <a class="link link-hover hover:text-primary transition-colors" href="/privacy-policy">Privacy
                    Policy</a>
                <a class="link link-hover hover:text-primary transition-colors" href="/legal-notice">Legal Notice</a>
            </div>
        </footer>
    </div>

    <style>
        /* Custom styles for legal content */
        .legal-content h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: #f97316;
        }

        .legal-content h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
        }

        .legal-content p {
            margin-top: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .legal-content ul {
            list-style-type: disc;
            padding-left: 1.25rem;
            margin-top: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .legal-content li {
            margin-bottom: 0.25rem;
        }
    </style>
{% endblock %}
